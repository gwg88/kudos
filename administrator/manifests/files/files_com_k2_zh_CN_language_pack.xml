	<fileset>
		<!-- 目标扩展的语言文件-->
		<files folder="site" target="language/zh-CN">			
			<filename>zh-CN.com_k2.ini</filename>
			<filename>zh-CN.com_k2.sys.ini</filename>
		</files>
		<!-- 目标扩展的语言文件-->
		<files folder="admin" target="administrator/language/zh-CN">			
			<filename>zh-CN.com_k2.ini</filename>
			<filename>zh-CN.com_k2.sys.ini</filename>
		</files>
		
		<!-- 语言包自己的语言文件-->
		<files folder="language/en-GB" target="language/en-GB">
			<filename>en-GB.files_files_com_k2_zh_CN_language_pack.sys.ini</filename>
		</files>
		<files folder="language/zh-CN" target="language/zh-CN">
			<filename>zh-CN.files_files_com_k2_zh_CN_language_pack.sys.ini</filename>
		</files>
	</fileset>
	
	<updateservers>
        <server type="collection" priority="1" name="BT LOGIN中文语言包">http://www.joomlachina.cn</server>
    </updateservers>
	
</extension>
